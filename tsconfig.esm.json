{
  "compilerOptions": {
    "alwaysStrict": true,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "downlevelIteration": true,
    "module": "esnext",
    "moduleResolution": "node",
    "lib": ["dom", "es2016"],
    "outDir": "./out/esm",
    "sourceMap": true,
    "target": "es6",
    "plugins": [
      {
        "name": "typescript-tslint-plugin"
      }
    ]
  },
  "exclude": ["node_modules", "out", "lib", "test"]
}
